<link rel="stylesheet" href="application.css">

<body>
  <div class="login">
    <h1>Sign up</h1>
    <%= form_with model: @consumer, url: consumers_path, local: true do |f| %>
      <div class="login_field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      
      <div class="login_field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>
      
      <div class="login_field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
      </div>
      
      <div>
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <%= link_to "Login", login_path %>
  </div>
</body>
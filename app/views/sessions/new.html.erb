<h1>新規ユーザー登録</h1>

<%= form_for @user, url: {action: :create} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "登録" %>
<% end %>
<p>
    <%= link_to 'ログイン', root_path %>
</p>
